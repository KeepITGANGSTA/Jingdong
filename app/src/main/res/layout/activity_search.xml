<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.jingdong.SearchActivity">
    
    <com.zhy.android.percent.support.PercentRelativeLayout
        app:layout_paddingLeftPercent="2%"
        app:layout_paddingRightPercent="4%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13%w"
       >


        <ImageView
            android:id="@+id/iv_searchBack"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/aa3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="5%"
            app:layout_heightPercent="5%w"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            app:layout_paddingLeftPercent="3%"
            app:layout_paddingRightPercent="3%"
            android:layout_centerInParent="true"
            android:background="@drawable/edit_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="70%w"
            app:layout_heightPercent="8%w"
            >

            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/b_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_search"
                android:layout_centerVertical="true"
                android:background="@null"
                app:layout_marginLeftPercent="9%"
                android:hint="无限机顶盒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/tv_search"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </com.zhy.android.percent.support.PercentRelativeLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_cutType"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/recy_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        app:layout_paddingLeftPercent="2%"
        app:layout_paddingRightPercent="4%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            app:layout_widthPercent="60%"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_saleOrder"
                android:layout_alignParentLeft="true"
                app:layout_textSizePercent="5%w"
                android:layout_centerVertical="true"
                android:text="销量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_priceOrder"
                android:layout_alignParentRight="true"
                app:layout_textSizePercent="5%w"
                android:layout_centerVertical="true"
                android:text="价格"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Recy_Child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</com.zhy.android.percent.support.PercentLinearLayout>
