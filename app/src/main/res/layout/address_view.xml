<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rel_accessAddress"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >
        <ImageView
            app:layout_marginLeftPercent="5%"
            android:id="@+id/iv_addressBack"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/aa3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"/>


        <TextView
            app:layout_textSizePercent="3%w"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:text="收货地址管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Recy_address"
        android:layout_below="@id/rel_accessAddress"
        android:layout_above="@+id/rel_addAddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rel_addAddress"
        app:layout_marginPercent="4%"
        android:background="#ff0000"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="10%w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:gravity="center"
            app:layout_widthPercent="45%w"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentLeft="true"
                app:layout_widthPercent="15%w"
                app:layout_heightPercent="15%w"
                android:src="@mipmap/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:text="新建地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>