<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        app:layout_paddingLeftPercent="3%"
        app:layout_paddingRightPercent="3%"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%w"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="#cccccc"
            android:text="数量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:background="@drawable/details_btn"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="25%w"
            app:layout_heightPercent="6%w"
            >
            <TextView
                android:textColor="#000000"
                android:id="@+id/tv_sumCut"
                android:textStyle="bold"
                android:gravity="center"
                android:text="-"
                android:background="@drawable/details_btn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:gravity="center"
                android:id="@+id/ed_GoodsNum"
                android:inputType="number"
                android:maxLength="3"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="#000000"
                android:id="@+id/tv_sumPlus"
                android:textStyle="bold"
                android:gravity="center"
                android:text="+"
                android:background="@drawable/details_btn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <Button
        android:id="@+id/btn_diaJoinCar"
        app:layout_textSizePercent="4%w"
        android:textColor="#ffffff"
        android:text="确定"
        android:background="#ff0000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.zhy.android.percent.support.PercentRelativeLayout>