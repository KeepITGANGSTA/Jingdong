<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >
        <ImageView
            app:layout_marginLeftPercent="5%"
            android:id="@+id/iv_paySuccessBack"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/aa3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"/>

        <TextView
            app:layout_textSizePercent="3%w"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:text="账单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_paySuccess"
            android:src="@mipmap/paysuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentLinearLayout>



</com.zhy.android.percent.support.PercentLinearLayout>