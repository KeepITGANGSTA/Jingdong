<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <ImageView
            app:layout_marginLeftPercent="5%"
            android:id="@+id/iv_personalBack"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/aa3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"/>

        <TextView
            app:layout_textSizePercent="3%w"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rel_personIcon"
        app:layout_paddingLeftPercent="5%"
        app:layout_paddingRightPercent="3%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="17%w"
        >
        <TextView
            android:layout_centerVertical="true"
            app:layout_textSizePercent="5%w"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:text="头像"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.makeramen.roundedimageview.RoundedImageView
            app:layout_marginRightPercent="6%"
            android:src="@mipmap/ic_launcher_round"
            app:layout_widthPercent="15%"
            app:layout_heightPercent="15%w"
            android:id="@+id/iv_personalIcon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:riv_oval="true"/>

        <ImageView
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"
            android:src="@mipmap/apu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rel_personUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <TextView
            android:textColor="#000000"
            app:layout_marginLeftPercent="5%"
            android:text="用户名"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_marginRightPercent="7%"
            android:id="@+id/tv_personUsername"
            app:layout_textSizePercent="3%w"
            android:textColor="#cccccc"
           android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"
            android:src="@mipmap/apu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rel_personNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <TextView
            android:textColor="#000000"
            app:layout_marginLeftPercent="5%"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_marginRightPercent="7%"
            android:id="@+id/tv_personNickname"
            app:layout_textSizePercent="3%w"
            android:textColor="#cccccc"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"
            android:src="@mipmap/apu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <TextView
            android:textColor="#000000"
            app:layout_marginLeftPercent="5%"
            android:text="性别"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_marginRightPercent="7%"
            android:id="@+id/tv_personGendername"
            app:layout_textSizePercent="3%w"
            android:textColor="#cccccc"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"
            android:src="@mipmap/apu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <TextView
            android:textColor="#000000"
            app:layout_marginLeftPercent="5%"
            android:text="出生日期"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_marginRightPercent="7%"
            android:id="@+id/tv_personBirname"
            app:layout_textSizePercent="3%w"
            android:textColor="#cccccc"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"
            android:src="@mipmap/apu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentLinearLayout>