<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <ImageView
            app:layout_marginLeftPercent="5%"
            android:id="@+id/iv_setBack"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/aa3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"/>

        <TextView
            app:layout_textSizePercent="3%w"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:text="设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>



    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <TextView
            android:textColor="#000000"
            app:layout_marginLeftPercent="5%"
            android:text="非WLAN环境下手动加载图片"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_marginRightPercent="7%"
            app:layout_textSizePercent="3%w"
            android:textColor="#cccccc"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"
            android:src="@mipmap/apu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rel_clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <TextView
            android:layout_centerVertical="true"
            android:textColor="#000000"
            app:layout_marginLeftPercent="5%"
            android:text="清除本地缓存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_personNickname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <TextView
            app:layout_marginRightPercent="7%"
            android:id="@+id/tv_CacheSize"
            app:layout_textSizePercent="3%w"
            android:textColor="#cccccc"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"
            android:src="@mipmap/apu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <TextView
            android:textColor="#000000"
            app:layout_marginLeftPercent="5%"
            android:text="性别"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_marginRightPercent="7%"
            android:id="@+id/tv_personGendername"
            app:layout_textSizePercent="3%w"
            android:textColor="#cccccc"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"
            android:src="@mipmap/apu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <TextView
            android:textColor="#000000"
            app:layout_marginLeftPercent="5%"
            android:text="出生日期"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_marginRightPercent="7%"
            android:id="@+id/tv_personBirname"
            app:layout_textSizePercent="3%w"
            android:textColor="#cccccc"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"
            android:src="@mipmap/apu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>